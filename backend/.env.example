# Computer Inventory System - Backend Configuration

# Database Configuration
DATABASE_URL=

# API Keys (comma-separated bcrypt hashed keys)
# Generate keys using: python -m app.config
API_KEYS=

# CORS Origins (comma-separated, no brackets or quotes)
CORS_ORIGINS=

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# Server Settings (for production)
HOST=0.0.0.0
PORT=8000

# 1Password Connect Integration
ONEPASSWORD_ENABLED=false
OP_CONNECT_HOST=
OP_API_TOKEN=
OP_VAULT_NAME=

# Internal CA cert verification. Change for prod with
# OP_SSL_CERT_FILE=/path/to/internal-ca.pem
OP_SSL_VERIFY=false
